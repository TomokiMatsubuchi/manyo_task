<h1><%= t('.New Task') %> </h1>
<% if @task.errors.any? %>
    <div id="error_explanation" class = "alert alert-danger">
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<%= form_with(model: @task, local: true) do |form| %>
  <%= form.label :title, t('.Title') %><br>
  <%= form.text_field :title %><br>
  <%= form.label :content, t('.Content') %><br>
  <%= form.text_area :content %><br>
  <%= form.submit t('.Create Task'), id: 'create-task' %>
<% end %>
<%= link_to t('.Back'), :back, id: 'back' %>